{
  "extends": "@edx/typescript-config",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/utils/*":["./src/utils/*"],
      "@/assets/*":["./src/assets/*"],
    }
  },
  "include": [
    "src/types/types.d.ts",
    "src/**/*",
    "config/**/*",
    "*.config.*",
    ".eslintrc.js"
  ],
  "exclude": ["dist", "node_modules"]
}
